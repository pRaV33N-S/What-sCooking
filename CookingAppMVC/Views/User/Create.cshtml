        backdrop-filter: blur(3px);
    }

    /* Styling for the user form container */
    #Container {
        margin-left: 400px;
        margin-top: 110px;
        margin-bottom: 80px;
        margin-right: 80px;
    }

    /* Styling for labels */
    label {
        color: white;
    }

    .create-user-heading {
        color: white;
        font-weight: bold;
        margin-left: 20px;
        /* Styling for form controls */
        .form-control

    {
        background-color: #D3D3D3;
        width: 60%;
        border-color: white;
    }

    /* Styling for form groups */
    .form-group {
        font-weight: bold;
    }

    /* Styling for primary button */
    .btn-primary {
        background-color: #66FF66;
        border-color: black;
        color: #000000;
        font-size: 17px;
        box-shadow: 0px 4px 8px rgba(255, 255, 255, 0.2);
    }

    /* Margin for the primary button */
    .btn-margin {
        margin-right: 188px;
    }

    /* Styling for secondary button */
    .btn-sec {
        background-color: #6495ED;
