
@model CookingAppMVC.Models.User

<div class="user-delete">
    <div id="deleteCon">
        <h2 class="heading1">User Delete</h2>
        <p>Are you sure you want to delete this user?</p>
        <dl class="dl-horizontal">
            <dt>User ID:</dt>
            <dd>@Model.UserId</dd>
            <dt>First Name:</dt>
            <dd>@Model.FirstName</dd>
            <dt>Last Name:</dt>
            <dd>@Model.LastName</dd>
            <dt>Username:</dt>
            <dd>@Model.Username</dd>
            <dt>Email:</dt>
            <dd>@Model.Email</dd>
        </dl>
        <hr />
        <form asp-action="Delete" method="post" class="delete-form">
            <input type="hidden" asp-for="UserId" />
            <div class="button-container">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* User Delete Page Styles */
    .user-delete {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    #deleteCon {
        background-color: white;
        margin: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 6px 9px rgba(0, 0, 0, 0.1);
    }

    .heading1 {
        text-align: center;
    }

    h2 {
        margin-top: 10px;
        font-weight: bold;
    }

    p {
        text-align: center;
    }

    dl {
        margin-top: 20px;
        width: 100%;
    }

    dt {
        text-align: left;
        width: 30%;
    }

    dd {
        font-weight: bold;
    }

    .delete-form {
        text-align: center;
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        font-weight: bold;
        width: 120px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        font-weight: bold;
    }

    body {
        background-color: rgba(135, 206, 250, 0.5);
        margin: 0;
    }
</style>