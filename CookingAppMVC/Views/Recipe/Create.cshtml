
@model CookingAppMVC.Models.Recipe

@{
    ViewData["Title"] = "Create Recipe";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


<div class="wrapper">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center">
                <h2 style="color:black;">Create Recipe</h2>

            </div>
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter Description" autocomplete="off"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients">Ingredients:</label>
                <textarea asp-for="Ingredients" class="form-control" placeholder="Enter Ingredients" autocomplete="off"></textarea>
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category">Category:</label>
                <input type="text" asp-for="Category" class="form-control" placeholder="Enter Category" autocomplete="off" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmissionDate">Submission Date:</label>
                <input type="date" asp-for="SubmissionDate" class="form-control" placeholder="Enter Submission Date" autocomplete="off" value="" data-val="true" data-val-required="The Submission Date field is required." />
                <span asp-validation-for="SubmissionDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl">Image URL:</label>
                <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Enter Image URL" autocomplete="off" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group button">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
   
    </div>
</div>
<Style>
    body {
        min-height: 100vh;
        background-repeat: no-repeat;
        background-size: cover;
        justify-content: space-around;
        background-image: url("https://img.freepik.com/free-photo/noodles-with-vegetables-with-copy-space_23-2148551717.jpg");
    }
</Style>