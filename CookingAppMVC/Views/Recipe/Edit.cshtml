@model CookingAppMVC.Models.Recipe

@{
    ViewData["Title"] = "Edit Recipe";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <h2 class="text-center text-info">Edit Recipe</h2>

                <div class="form-group">
                    <label asp-for="Name">Name:</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description:</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter Description" autocomplete="off"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ingredients">Ingredients:</label>
                    <textarea asp-for="Ingredients" class="form-control" placeholder="Enter Ingredients" autocomplete="off"></textarea>
                    <span asp-validation-for="Ingredients" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category">Category:</label>
                    <input type="text" asp-for="Category" class="form-control" placeholder="Enter Category" autocomplete="off" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubmissionDate">Submission Date:</label>
                    <input type="date" asp-for="SubmissionDate" class="form-control" autocomplete="off" />
                    <span asp-validation-for="SubmissionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image URL:</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Enter Image URL" autocomplete="off" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <hr />
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        min-height: 100vh;
        background-repeat: no-repeat;
        background-size: cover;
        background-image: url("https://img.freepik.com/premium-photo/bay-leaf-black-pepper-black-background-condiments-flat-view-space-text_350891-622.jpg?size=626&ext=jpg&ga=GA1.1.1694032993.1695972901&semt=ais");
        backdrop-filter: blur(5px);
    }

    h2 {
        color: white;
    }

    .container {
        color: white;
        margin-top: 10px;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.8);
        color: #000;
    }

    .text-danger {
        color: #dc3545;
    }
</style>