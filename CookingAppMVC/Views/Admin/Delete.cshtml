@model Admin

<div class="delete-container">
    <h2>Delete Admin</h2>
    <p>Are you sure you want to delete this admin?</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AdminId" />
        <div class="form-group">
            <label for="Adminname">Admin Name:</label>
            <p>@Model.Adminname</p>
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <p>@Model.Email</p>
        </div>
        <div class="form-group">
            <label for="Password">Password:</label>
            <p>@Model.Password</p>
        </div>
        <hr />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-warning">Back</a>
    </form>
</div>

<style>
    .delete-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        margin-top:180px;
    }
    body{
        background-image: url("https://img.freepik.com/premium-photo/background-cooking-black-wooden-background-top-view-free-space-your-text_187166-5650.jpg?w=826");
    }

    h2 {
        font-size: 24px;
        margin-top: 0;
    }

    p {
        font-size: 16px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    label {
        display: block;
        font-weight: bold;
    }

    p {
        margin: 0;
    }

</style>
