
@model Admin

@{
    ViewData["Title"] = "Edit Admin";
}

<style>
    body {
        background-image: url("https://img.freepik.com/free-photo/noodles-with-vegetables-with-copy-space_23-2148551717.jpg");
        backdrop-filter: blur(1px);
    }

    .validation-error {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }

    .btn-secondary {
        margin-left: 100px;
        color: white;
        font-weight: bold;
    }

    .btn-primary {
        margin-left: 0px;
        color: white;
        font-weight: bold;
    }

    .wrapper {
        background-color: khaki;
        margin-top: 80px;
        margin-right: 590px;
        margin-left: 120px;
        height: 400px;
        padding: 20px;
    }

    #div2 {
        padding: 30px;
    }
</style>

<div class="wrapper">
    <div class="row">
        <div id="div1">
            <div id="div2">
                <h2>Edit Admin</h2>

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="AdminId" />
                    <div class="form-group">
                        <label for="Adminname">Admin Name:</label>
                        <input type="text" class="form-control" id="Adminname" name="Adminname" value="@Model.Adminname">
                        <span asp-validation-for="Adminname" class="validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email">
                        <span asp-validation-for="Email" class="validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password">
                        <span asp-validation-for="Password" class="validation-error"></span>
                    </div>
                    <hr />
                    <form>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mr-2">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </form>
            </div>
        </div>
    </div>
</div>
